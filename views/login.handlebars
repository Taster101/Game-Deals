<div class="container">
    <h2>Login</h2>
    <form id="loginForm">
        <div class="mb-3">
            <label for="email-login" class="form-label">Email</label>
            <input type="text" class="form-input" id="email-login">
        </div>
        <div class="mb-3">
            <label for="password-login" class="form-label">Password</label>
            <input type="password" class="form-input" id="password-login">
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Login</button>
            <a class="login-link" href="/users/signup">Sign up instead</a>
        </div>
    </form>
</div>

<script src="/public/js/login.js"></script>